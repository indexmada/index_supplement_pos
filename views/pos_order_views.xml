<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View pos.order form -->
    <record id="view_pos_order_form" model="ir.ui.view">
        <field name="name">view.pos.order.form</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Acc &amp; Sauces">
                    <group name="stock">
                        <field name="picking_accompaniment_id" string="Mouvement"/>
                    </group>
                    <group name="accompaniment" string="DÃ©tails">
                        <field name="accompaniment_ids" colspan="4" nolabel="1">
                            <tree string="Order lines" editable="bottom">
                                <field name="product_id"/>
                                <field name="quantity"/>
                                <field name="line_id" invisible="1"/>
                                <field name="price" widget="monetary"/>
                                <field name="status" />
                            </tree>
                            <form string="Order lines" editable="bottom">
                                <group>
                                    <group>
                                        <field name="name"/>
                                        <field name="product_id"/>
                                        <field name="quantity"/>
                                    </group>
                                    <group>
                                        <field name="line_id" invisible="1"/>
                                        <field name="price" widget="monetary"/>
                                        <field name="status" />
                                    </group>
                                </group>
                            </form>
                        </field>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>